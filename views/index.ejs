<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
<!-- CSS-->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- Javascript-->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- GOOGLE FONTS-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Acme&family=Cinzel&family=Cinzel+Decorative&family=Monoton&family=Raleway+Dots&family=Suranna&display=swap" rel="stylesheet">

   <style>
      body {
      /* Set "my-sec-counter" to 0 */
      counter-reset: my-sec-counter;
      }

      h2::before {
      /* Decrement "my-sec-counter" by 1 */
      counter-increment: my-sec-counter -1;
      content: "Quiz " counter(my-sec-counter) ". ";
      }
    </style>

    <script type="text/javascript">
       $(document).ready(function(){
         for (let id of userId){
           let newUrl1 ="/create/${id}";
           let newUrl2 ="/myquiz/${id}>";
          $('#createlink').attr('href', newUrl1);
          $('myquizlink').attr('href', newUrl2);
          console.log(newUrl1,newUrl2);
         }
      }
    </script>
  </head>

  <body>
    <header>
      <nav>
        <!-- logo will be a home button -->
        <button class="logo" type="button"><a href="">QUIZ WIZ</a></button>

          <div class="nav-header">

           <button class="create-quiz"><a  id="createlink" class="createlink" href="/create/<%- userId[0].userId %>">Create a Quiz</a></button>

            <button class="my-quizzes"><a id="myquizlink" class="myquizlink" href="/myquiz/<%- userId[0].userId %>">My Quizzes</a></button>
          </div>

          <button type = "submit" class="logout">Log out</button>

      </nav>
    </header>

<!-- *** in CSS make sure to set to float:left, width:33% ***-->
    <div id="home-body">
      <h1 class="welcome-message">WELCOME TO QUIZ WIZ!</h1>

      <% for (let quiz of userData) {%>

      <span class="public-quizzes-homepage">
        <div class="my-quizzes">
          <h2 class="my-quiz-title"></h2><h3><%- quiz.title %></h3>

          <p class="url-text">localhost:8080/myquiz/<%- quiz.userid %>/<%- quiz.quizid %></p>

          <p class="url-text">Created By: <%- quiz.name %></p>

          <img class="Quiz-profile-image" src="https://i.guim.co.uk/img/media/7a633730f5f90db3c12f6efc954a2d5b475c3d4a/0_138_5544_3327/master/5544.jpg?width=1200&height=900&quality=85&auto=format&fit=crop&s=6d246ca192c6f0c8cf3bdc40f8a43b63" width="100" height="100">

          <form method="get" action="quiz/<%-quiz.quizid%>">
          <button class="home-start-quiz" type="submit">Start!</button>
          </form>

        </div>
        <%}%>
      </div>

    </span>

  </body>
</html>
